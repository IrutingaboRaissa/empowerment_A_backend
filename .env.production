# Environment
NODE_ENV=production

# Server
PORT=3000
FRONTEND_URL=https://your-frontend-domain.vercel.app

# Database
# PostgreSQL connection string: format -> postgresql://USER:PASSWORD@HOST:PORT/DATABASE?sslmode=require
DATABASE_URL="postgresql://user:password@endpoint/dbname?sslmode=require"

# Authentication
# Replace these secrets with strong, unique values in production
JWT_SECRET=amasimbi-super-secret-key-2024-production
REFRESH_TOKEN_SECRET=amasimbi-refresh-token-secret-2024-production

# File Upload
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880 # 5MB in bytes

# JWT Configuration
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_EXPIRES_IN="7d"

# CORS
ALLOWED_ORIGINS=https://your-frontend-domain.vercel.app

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
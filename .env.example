# Environment
NODE_ENV="production"

# Server Configuration
PORT=3001
FRONTEND_URL="https://your-frontend-domain.com"

# Database Configuration
# PostgreSQL connection string: format -> postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=SCHEMA
DATABASE_URL="postgresql://user:password@localhost:5432/amasimbi?schema=public"

# Authentication
# Replace these secrets with strong, unique values in production
JWT_SECRET="your-super-secret-key-here"
REFRESH_TOKEN_SECRET="your-refresh-token-secret-here"

# File Upload Configuration
UPLOAD_DIR="uploads"
MAX_FILE_SIZE=5242880 # 5MB in bytes

# JWT Configuration
JWT_EXPIRES_IN="7d"
REFRESH_TOKEN_EXPIRES_IN="7d"

# CORS Configuration
ALLOWED_ORIGINS="https://your-frontend-domain.com"

# Email Configuration
SMTP_HOST="smtp.example.com"
SMTP_PORT=587
SMTP_USER="your-email@example.com"
SMTP_PASS="your-email-password"